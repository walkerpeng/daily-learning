<?xml version="1.0" encoding="UTF-8" ?>
<assembly>
    <id>package</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>
                ${project.basedir}/src/main/resources
            </directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}
            </directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>